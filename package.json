{
  "name": "codecast-to-discord",
  "displayName": "CodeCast to Discord",
  "description": "Share files and code snippets from VS Code directly to Discord with syntax highlighting.",
  "version": "0.0.1",
  "publisher": "CodeCast",
  "engines": {
    "vscode": "^1.106.1"
  },
  "keywords": [
    "discord",
    "share",
    "code",
    "snippet",
    "webhook",
    "codecast"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:discord-share.share"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "discord-share.share",
        "title": "Send to Discord"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "discord-share.share",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Discord Share",
      "properties": {
        "discord-share.webhookUrl": {
          "type": "string",
          "default": "",
          "description": "The Discord webhook URL to post to. Can be set per workspace.",
          "scope": "resource"
        },
        "discord-share.showAuthor": {
          "type": "boolean",
          "default": true,
          "description": "Show the author in the embed."
        },
        "discord-share.authorName": {
          "type": "string",
          "default": "",
          "description": "The name to show as the author. If empty, the extension will try to use a name from the environment."
        },
        "discord-share.showLineNumbers": {
          "type": "boolean",
          "default": false,
          "description": "Show line numbers in the code block."
        },
        "discord-share.promptForComment": {
          "type": "boolean",
          "default": false,
          "description": "Prompt for a comment before sending."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
